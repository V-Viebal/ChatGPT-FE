.fileinput.m-2.text-center(*ngIf='avatar')
	input(
		#fileInput,
		accept='image/*',
		type='file',
		(change)='handleImageChange($event)')
	.image-container([class.loading]='isImageLoading')
		i(*ngIf='isImageLoading', class='pi pi-spin pi-spinner', style='font-size: 2rem')
		img.thumbnail.mb-2(
			referrerpolicy="no-referrer",
			[alt]='"LABEL.BACKGROUND_IMAGE" | translate',
			[src]='imgSrcPreviewUrl')
	.flex.justify-content-center
		button.justify-content-center.align-items-center.mr-2(
			pButton,
			type='button',
			class='p-button-success new-button',
			(click)='handleClick()')

			i(class='pi pi-plus', style='font-size: 1rem; margin-right: .5rem')
			| {{ "LABEL.ADD_BACKGROUND" | translate }}
		button.justify-content-center.align-items-center(
			pButton,
			type='button',
			class='p-button-secondary reset-button',
			(click)='handleRemove()')
			i(class='pi pi-replay', style='font-size: 1rem; margin-right: .5rem')
			| {{ "LABEL.RESET_BACKGROUND" | translate }}
